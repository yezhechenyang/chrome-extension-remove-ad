{
	"manifest_version": 2,
	"name": "自定义去广告",
	"description": "学习Chrome扩展开发，去广告实践！",
	"version": "0.0.1",

	"content_scripts": 
	[
		{
			"matches": ["https://tieba.baidu.com/*"],
			"js": ["tieba-remove-ad.js"],
			"run_at": "document_idle"
		}
		,{
			"matches": ["http://*/*"],
			"js": ["http-remove-ad.js"],
			"css": ["http-remove-ad.css"],
			"run_at": "document_idle"
		}
		,{
			"matches": ["https://www.baidu.com/s*"],
			"js": ["baidusousuo-remove-ad.js"],
			"run_at": "document_idle"
		}
		,{
			"matches": ["https://blog.csdn.net/*"],
			"js": ["csdn-blog.js"],
			"run_at": "document_idle"
		}
		,{
			"matches": ["*://*.zhihu.com/*"],
			"js": ["zhihu.js"],
			"run_at": "document_idle"
		}
	]
}